{
  "relevance": {
    "label": "Relevans",
    "method": "_score",
    "default": true
  },
  "title|desc": {
    "label": "Alfabetisk(original): z-a",
    "method": {
      "method": {"text.da-DK.title.keyword": "desc"}
    }
  },
  "title|asc": {
    "label": "Alfabetisk(original): a-z",
    "method": {
      "method": {"text.da-DK.title.keyword": "asc"}
    }
  },
  "title-scripted|asc": {
    "label": "Alfabetisk(scripted): a-z",
    "method": {
      "_script": {
        "type": "string",
        "order": "asc",
        "script": {
          "lang": "painless",
          "inline": "(doc.containsKey('text.da-DK.title.keyword') ? doc['text.da-DK.title.keyword'].value : '') + (doc.containsKey('workDescription.keyword') ? doc['workDescription.keyword'].value : '')"
        }
      }
    }
  },
  "title-scripted|desc": {
    "label": "Alfabetisk(scripted): z-a",
    "method": {
      "_script": {
        "type": "string",
        "order": "desc",
        "script": {
          "lang": "painless",
          "inline": "(doc.containsKey('text.da-DK.title.keyword') ? doc['text.da-DK.title.keyword'].value : '') + (doc.containsKey('workDescription.keyword') ? doc['workDescription.keyword'].value : '')"
        }
      }
    }
  },
  "title-unmapped|asc": {
    "label": "Alfabetisk(unmapped): a-z",
    "method": [{
      "text.da-DK.title.keyword":{
        "order" : "asc",
        "unmapped_type" : "string"
      },
      "workDescription.keyword":{
        "order" : "asc",
        "unmapped_type" : "string"
      }
    }
    ]
  },
  "title-unmapped|desc": {
    "label": "Alfabetisk(unmapped): z-a",
    "method": [{
      "text.da-DK.title.keyword":{
        "order" : "desc",
        "unmapped_type" : "string"
      },
      "workDescription.keyword":{
        "order" : "desc",
        "unmapped_type" : "string"
      }
    }
    ]
  },
  "modification|desc": {
    "label": "Opdateret: Nyeste",
    "method": {
      "_script": {
        "type": "number",
        "order": "desc",
        "script": {
          "lang": "painless",
          "inline": "(doc.containsKey('meta.modified') ? doc['meta.modified'].date.getMillisOfDay() : (doc.containsKey('createdDate') ? doc['createdDate'].date.getMillisOfDay() : 0) )"
        }
      }
    }
  },
  "modification|asc": {
    "label": "Opdateret: Ã†ldste",
    "method": {
      "_script": {
        "type": "number",
        "order": "asc",
        "script": {
          "lang": "painless",
          "inline": "(doc.containsKey('meta.modified') ? doc['meta.modified'].date.getMillisOfDay() : (doc.containsKey('createdDate') ? doc['createdDate'].date.getMillisOfDay() : 0) )"
        }
      }
    }
  }
}
