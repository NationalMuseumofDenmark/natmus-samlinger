include ../mixins/icon

header.topbar(class=frontpage ? 'topbar--frontpage' : '')
  .container-fluid
    nav
      .topbar__items
        include ./topbar-menu
        include ./topbar-search
      if frontpage
        .topbar__logo.hidden-sm.hidden-xs
          .topbar__logo-icon.topbar__logo-icon--large
            +icon('logo')
          .topbar__logo-text
            h1 Nationalmuseets Samlinger Online
            .topbar__logo-tagline Udforsk #{totalAssets} billeder og genstande fra Nationalmuseets samling
